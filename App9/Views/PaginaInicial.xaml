<Page x:Class="App9.Views.PaginaInicial"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:App9.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PaginaInicial" Loaded="Page_Loaded"
      Style="{DynamicResource MahApps.Styles.Page}">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="407*"/>
            <RowDefinition Height="43*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="319*"/>
            <ColumnDefinition Width="81*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Ver Disciplina"   Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="Button_Click" Grid.Column="1" Grid.Row="1" Style="{StaticResource MahApps.Styles.Button.Square.Accent}"/>
        <DataGrid x:Name="datagridDisci" Margin="0,0,0,2" Grid.ColumnSpan="2"/>

    </Grid>
</Page>
